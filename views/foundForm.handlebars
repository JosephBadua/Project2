<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <!--Padding-->
    </div>
    <div class="col-md-4">
      <h2 class="formTitle text-center">Found Animal Form</h2>
    </div>
    <div class="col-md-4">
      <!--Padding-->
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <img class="lostFormPicture" src="/styles/images/lostCat.jpeg">
    </div>
    <div class="col-md-6">
      <section id="testimonials">
        <form class="form-horizontal" method="POST" action="/Found_Animals/create">
          <label class="control-label col-sm-12">Animal Name:</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="Enter Name" name="name">
          </div>
          <div class="form-group">
            <label class="control-label col-sm-12" for="email">Email:</label>
            <div class="col-sm-12">
              <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
            </div>
            <label class="control-label col-sm-12">Species:</label>
            <div class="col-sm-12">
              <input type="text" class="form-control" placeholder="Enter Species" name="species">
            </div>
          </div>
          <label class="control-label col-sm-12">Breed:</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="Enter breed" name="breed">
          </div>
          <label class="control-label col-sm-12">Color:</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="Enter color" name="color">
          </div>
          <label class="control-label col-sm-12">Description:</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="Enter description" name="description">
          </div>
          <label class="control-label col-sm-12">Found When</label>
          <div class="col-sm-12">
            <input type="date" class="form-control" placeholder="Enter lost at" name="date">
          </div>
          <label class="control-label col-sm-12">Zip Code</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="Zip Code" name="zip">
          </div>
          <label class="control-label col-sm-12">Found Where (City)</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="lost where" name="where">
          </div>
          <label class="control-label col-sm-12">Picture</label>
          <div class="col-sm-12">
            <input type="text" class="form-control" placeholder="Photo Url" name="picture">
          </div>
          <br>
          <div class="col-md-3 offset-md-9">
            <button type="submit" class="btn btn-danger submit">Submit</button>
          </div>
        </form>
      </section>
    </div>
    <div class="col-md-3">
      <img class="lostFormPicture" src="/styles/images/lostDog.jpeg">
    </div>
